pipeline
{
    environment
    {
        MVN_SETTINGS = credentials( 'secret-teslanet-maven-settings.xml' )
        GNUPGHOME = '/var/jenkins_home/.gnupg/'
    }
    agent
    { 
        dockerfile true
    }
    stages
    {       
        stage('prepare')
        {
            steps
            {
               sh '''
                git config user.email "jenkins@teslanet.nl"
                git config user.name "jenkins"
                '''
            }
        }
        stage('build')
        {
            steps
            {
                sh 'mvn clean package'
            }
        }
        stage('test')
        {
            steps
            {
                sh 'mvn test'
            }
        }
        stage('deploy')
        {
            steps
            {
               sh 'mvn -s $MVN_SETTINGS deploy'
            }
        }
        stage('release-prepare')
        {
            steps
            {
               sh 'mvn -s $MVN_SETTINGS release:prepare'
            }
        }
        stage('release-perform')
        {
            steps
            {
               sh 'mvn -s $MVN_SETTINGS release:perform'
            }
        }
    }
}